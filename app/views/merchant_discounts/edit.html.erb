<%= form_with url: merchant_discount_path(@merch, @discount), method: :patch, data: {turbo: false}, local: true do |f| %>

  <%= f.label :percent, value: @discount.percent_discount %>
  <%= f.number_field :percent_discount %>

  <%= f.label :threshold, value: @discount.quantity_threshold %>
  <%= f.number_field :quantity_threshold %>

  <%= f.submit "submit"%>
<% end %>